// Interpolate U to create near-wall UNear
nearWallFields
{
    libs 		("libfieldFunctionObjects.so");
    type 		nearWallFields;
    writeControl    	writeTime;
    executeControl   	writeTime;

    fields
    (
        		(UMean UNear)		//(inputField outputField)
    );

    patches 		( Propeller_Group );
    distance 		0.001;
}

